{
  "name": "pdf-tools-enhanced",
  "version": "2.0.0",
  "description": "Professional PDF splitting and merging application with modern UI/UX",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "serve": "npx serve .",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'"
  },
  "keywords": [
    "pdf",
    "split",
    "merge",
    "pwa",
    "javascript",
    "web-app",
    "document-processing",
    "accessibility",
    "dark-mode",
    "responsive"
  ],
  "author": "PDF Tools Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pdf-tools-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/pdf-tools-enhanced/issues"
  },
  "homepage": "https://your-username.github.io/pdf-tools-enhanced",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "live-server": "^1.2.2",
    "serve": "^14.2.1"
  },
  "dependencies": {},
  "peerDependencies": {},
  "optionalDependencies": {},
  "bundledDependencies": [],
  "files": [
    "index.html",
    "style.css",
    "script.js",
    "manifest.json",
    "sw.js",
    "README.md"
  ],
  "pwa": {
    "name": "PDF Tools",
    "short_name": "PDF Tools",
    "description": "Professional PDF splitting and merging",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#007bff",
    "icons": [
      {
        "src": "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 192 192'><rect width='192' height='192' fill='%23007bff' rx='24'/><text x='96' y='120' font-size='80' text-anchor='middle' fill='white'>ðŸ“„</text></svg>",
        "sizes": "192x192",
        "type": "image/svg+xml"
      }
    ]
  },
  "config": {
    "max_file_size": "50MB",
    "max_files": 10,
    "supported_types": ["application/pdf"],
    "chunk_size": "1MB",
    "preview_scale": 0.3,
    "thumbnail_scale": 0.5
  },
  "features": {
    "dark_mode": true,
    "pwa": true,
    "accessibility": true,
    "responsive": true,
    "drag_drop": true,
    "progress_indicators": true,
    "error_handling": true,
    "validation": true,
    "keyboard_shortcuts": true,
    "bulk_operations": true,
    "preview": true,
    "offline": true
  },
  "accessibility": {
    "wcag_level": "AA",
    "keyboard_navigation": true,
    "screen_reader": true,
    "high_contrast": true,
    "reduced_motion": true,
    "focus_management": true
  },
  "performance": {
    "lazy_loading": true,
    "chunked_processing": true,
    "memory_optimization": true,
    "web_workers": true,
    "caching": true
  },
  "build": {
    "appId": "com.pdftools.enhanced",
    "productName": "PDF Tools",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.md"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}

